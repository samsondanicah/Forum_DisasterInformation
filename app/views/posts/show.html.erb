<h1>show post id: <%= @post.id %></h1>
<ul>
  <li><%= @post.title %></li>
  <li><%= @post.content %></li>
  <li><%= @post.address %></li>
  <li><%= @post.user&.email %></li>
  <li><%= @post.categories.pluck(:name).join(',') %></li>
  <li><%= "#{@post.region&.name}, #{@post.province&.name}, #{@post.address}, #{@post.city&.name}, #{@post.barangay&.name}" %></li>
  <li><%= "#{Geocoder.search(@post.ip_address).first&.city}, #{Geocoder.search(@post.ip_address).first&.country}" %></li>
</ul>

<%= link_to 'Index', posts_path %>